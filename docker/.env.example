# ================================
# Docker Compose Environment Variables
# ================================
# Copy this file to .env in the same directory as docker-compose.yml

# Database
DB_NAME=bruno_pa
DB_USER=postgres
DB_PASSWORD=postgres

# Django
DEBUG=True
SECRET_KEY=docker-dev-secret-key-change-in-production
JWT_SECRET_KEY=docker-dev-jwt-secret-change-in-production

# LLM Providers
OPENAI_API_KEY=your-openai-api-key-here
OLLAMA_BASE_URL=http://host.docker.internal:11434

# Note: host.docker.internal allows Docker containers to access
# services running on the host machine (like Ollama)
