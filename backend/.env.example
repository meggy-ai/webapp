# ================================
# Django Backend Environment Variables
# ================================

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Choose ONE of the following options:

# Option 1: DATABASE_URL (recommended for production)
# PostgreSQL:
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bruno_pa
# SQLite (for development):
# DATABASE_URL=sqlite:///./db.sqlite3

# Option 2: Individual database settings (alternative to DATABASE_URL)
# Only use these if DATABASE_URL is not set
# DB_ENGINE=postgresql  # Options: postgresql, sqlite3, mysql
# DB_NAME=bruno_pa
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_HOST=localhost
# DB_PORT=5432
# 
# For SQLite (simpler for development):
# DB_ENGINE=sqlite3
# DB_NAME=db.sqlite3

# Database Migration Notes:
# - SQLite files (*.sqlite3*) are excluded from git
# - To switch from SQLite to PostgreSQL: change DB_ENGINE and run migrations
# - To switch from PostgreSQL to SQLite: change DB_ENGINE and run migrations
# - Always backup your data before switching database types
# - Use 'python manage.py dumpdata' to export data before switching

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# LLM Providers
OPENAI_API_KEY=your-openai-api-key-here
OLLAMA_BASE_URL=http://localhost:11434
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4

# Bruno Integration
BRUNO_CORE_VERSION=latest
BRUNO_LOG_LEVEL=INFO

# Email Settings (Optional - for future use)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# Redis (Required for WebSocket/Channels functionality)
REDIS_URL=redis://localhost:6379/0

# Celery (Optional - for future background tasks)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
